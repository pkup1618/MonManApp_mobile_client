<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_activity_start_screen_text_view"
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:gravity="center"
        android:lineHeight="30dp"
        android:textSize="23dp"
        android:text="@string/main_activity_start_screen_message">
    </TextView>

    <Button
        android:id="@+id/main_activity_try_to_use_button"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:text="@string/main_activity_start_screen_button_message">
    </Button>

</LinearLayout>