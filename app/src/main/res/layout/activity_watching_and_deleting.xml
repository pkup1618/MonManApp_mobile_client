<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/watching_and_deleting_activity_update_button"
        android:layout_height="50dp"
        android:layout_width="200dp">
    </Button>

    <EditText
        android:id="@+id/watching_and_deleting_activity_day_editText"
        android:layout_height="50dp"
        android:layout_width="200dp">
    </EditText>

    <!-- Это контейнер для будущих фрагментов -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/watching_and_deleting_activity_fragmentContainer"
        android:layout_height="500dp"
        android:layout_width="300dp">
    </FrameLayout>

</LinearLayout>

